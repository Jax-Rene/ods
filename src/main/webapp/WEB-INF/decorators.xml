<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/freemarker/">
    <excludes>
        <pattern>/js/*</pattern>
        <pattern>/css/*</pattern>
        <pattern>/img/*</pattern>
    </excludes>


    <!-- 默认的装饰器 -->
    <decorator name="default_decorate" page="default_decorate.ftl">
        <!-- 默认目录下(/WEB-INF/freemarker) 的所有请求 -->
        <pattern>/gotoIndex</pattern>
        <pattern>/getGroupInfo</pattern>
        <pattern>/createGroup</pattern>
        <pattern>/gotoCreateGroup</pattern>
        <pattern>/startOrder</pattern>
    </decorator>
</decorators>